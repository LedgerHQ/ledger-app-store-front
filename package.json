{
  "name": "ledger-app-store-front",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "webpack-dev-server --progress --colors --config ./webpack/dev.babel.js",
    "build": "NODE_ENV=production webpack --config ./webpack/prod.babel.js",
    "prettier": "prettier --write \"{src,webpack}/**/*.js\"",
    "lint": "eslint --fix src/",
    "flow": "flow",
    "flow-typed": "flow-typed install -s --overwrite",
    "test": "jest",
    "test-update": "npm test -- -u",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.test.js": "jest",
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "clearMocks": true,
    "verbose": true,
    "collectCoverage": true
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "clean-webpack-plugin": "^0.1.18",
    "dotenv-webpack": "^1.5.5",
    "eslint": "^4.18.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^21.14.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "flow-bin": "^0.67.1",
    "flow-typed": "^2.3.0",
    "html-webpack-plugin": "^3.0.6",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.0",
    "prettier": "^1.10.2",
    "react-test-renderer": "^16.2.0",
    "redux-mock-store": "^1.5.1",
    "uglifyjs-webpack-plugin": "^1.2.3",
    "webpack": "^4.1.1",
    "webpack-bundle-analyzer": "^2.11.0",
    "webpack-dev-server": "^3.1.1",
    "webpack-merge": "^4.1.2"
  },
  "dependencies": {
    "material-ui": "^1.0.0-beta.38",
    "material-ui-icons": "^1.0.0-beta.36",
    "ramda": "^0.25.0",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "react-hot-loader": "^4.0.0",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "redux": "^4.0.0",
    "redux-persist": "^5.9.1",
    "redux-thunk": "^2.2.0",
    "reselect": "^3.0.1",
    "styled-jsx": "^2.2.5",
    "u2f-api-polyfill": "^0.4.3",
    "unfetch": "^3.0.0",
    "webpack-cli": "^2.0.11"
  }
}
